<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="MaterialSpinner" tools:ignore="ResourceName">
        <attr name="arrowHint" format="color|reference" />
        <attr name="hideArrow" format="boolean" />
        <attr name="popBackground" format="color|reference" />
        <attr name="itemTextColor" format="color" />
        <attr name="itemTextSize" format="dimension" />
        <attr name="itemGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="itemPaddingL" format="dimension" />
        <attr name="itemPaddingT" format="dimension" />
        <attr name="itemPaddingR" format="dimension" />
        <attr name="itemPaddingB" format="dimension" />
        <attr name="entries" format="reference" />

        <attr name="hint" format="string|reference" />

        <attr name="ms_dropdown_max_height" format="dimension" />
        <attr name="ms_dropdown_height" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
    </declare-styleable>
</resources>